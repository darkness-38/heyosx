import { Button, VerticalBox, HorizontalBox, LineEdit, ComboBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    width: 1920px;
    height: 1080px;
    title: "heyOS Greeter";
    no-frame: true;
    background: transparent;
    default-font-family: "Segoe UI", "sans-serif";

    callback login(string, string, string);

    in property <[string]> users: ["marvin", "hey"];
    in property <[string]> sessions: ["heydm", "sway"];
    in property <string> error-message: "";
    
    // Properties for clock
    in property <string> current-time: "12:20 AM";
    in property <string> current-date: "Saturday, May 2, 2020";

    out property <string> selected-user: users[0];
    out property <string> selected-session: sessions[0];
    
    // Background gradient mimicking the image (brown on left, teal on right)
    Rectangle {
        width: 100%;
        height: 100%;
        background: @linear-gradient(135deg, #7b5946 0%, #4a6d7c 50%, #203a48 100%);
    }

    // Top Clock Section
    VerticalBox {
        y: parent.height * 0.12;
        width: 100%;
        spacing: 5px;
        alignment: start;

        Text {
            text: root.current-time;
            font-size: 110px;
            font-weight: 300;
            color: white;
            horizontal-alignment: center;
        }
        Text {
            text: root.current-date;
            font-size: 32px;
            font-weight: 400;
            color: white;
            horizontal-alignment: center;
        }
    }

    // Main Login Area
    VerticalBox {
        y: parent.height * 0.38;
        width: 100%;
        spacing: 25px;
        alignment: start;

        // User Avatar
        HorizontalBox {
            alignment: center;
            Rectangle {
                width: 150px;
                height: 150px;
                border-radius: 75px;
                border-width: 2px;
                border-color: white;
                background: transparent;
                clip: true;

                // Head
                Rectangle {
                    width: 54px;
                    height: 54px;
                    border-radius: 27px;
                    border-width: 2px;
                    border-color: white;
                    x: 48px;
                    y: 26px;
                }
                // Shoulders
                Rectangle {
                    width: 110px;
                    height: 60px;
                    border-radius: 55px;
                    border-width: 2px;
                    border-color: white;
                    x: 20px;
                    y: 95px;
                }
            }
        }

        // Username
        Text {
            text: root.selected-user;
            font-size: 36px;
            font-weight: 400;
            color: white;
            horizontal-alignment: center;
        }

        // Password Input
        HorizontalBox {
            alignment: center;
            spacing: 0px;
            
            pwd := LineEdit {
                width: 280px;
                height: 40px;
                placeholder-text: "Password";
                input-type: password;
                font-size: 18px;
                accepted => { root.login(root.selected-user, self.text, root.selected-session); }
            }
            
            Rectangle {
                width: 40px;
                height: 40px;
                background: touch.pressed ? #d0d0d0 : (touch.has-hover ? #f0f0f0 : white);
                border-color: #cccccc;
                border-width: 1px;
                
                Text {
                    text: "➔";
                    font-size: 20px;
                    color: #333333;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                touch := TouchArea {
                    clicked => { root.login(root.selected-user, pwd.text, root.selected-session); }
                }
            }
        }

        if (root.error-message != "") : Text {
            text: root.error-message;
            color: #ff4d4d;
            font-size: 16px;
            horizontal-alignment: center;
        }
    }

    // Bottom System Controls
    HorizontalBox {
        y: parent.height - 140px;
        width: 100%;
        alignment: center;
        spacing: 60px;

        // Sleep
        VerticalBox {
            spacing: 10px;
            alignment: center;
            Text { text: "☾"; color: white; font-size: 32px; font-weight: 100; horizontal-alignment: center; }
            Text { text: "Sleep"; color: white; font-size: 18px; horizontal-alignment: center; }
        }
        // Restart
        VerticalBox {
            spacing: 10px;
            alignment: center;
            Text { text: "↻"; color: white; font-size: 32px; font-weight: 100; horizontal-alignment: center; }
            Text { text: "Restart"; color: white; font-size: 18px; horizontal-alignment: center; }
        }
        // Shut Down
        VerticalBox {
            spacing: 10px;
            alignment: center;
            Text { text: "⏻"; color: white; font-size: 32px; font-weight: 100; horizontal-alignment: center; }
            Text { text: "Shut Down"; color: white; font-size: 18px; horizontal-alignment: center; }
        }
        // Other...
        VerticalBox {
            spacing: 10px;
            alignment: center;
            Text { text: "⌨"; color: white; font-size: 32px; font-weight: 100; horizontal-alignment: center; }
            Text { text: "Other..."; color: white; font-size: 18px; horizontal-alignment: center; }
        }
    }

    // Bottom Right: User & Session Changers
    HorizontalBox {
        x: parent.width - self.width - 40px;
        y: parent.height - self.height - 40px;
        spacing: 25px;
        alignment: end;

        VerticalBox {
            spacing: 8px;
            Text { text: "Session"; color: white; font-size: 16px; }
            ComboBox {
                width: 160px;
                model: root.sessions;
                current-value: root.selected-session;
                selected(val) => { root.selected-session = val; }
            }
        }

        VerticalBox {
            spacing: 8px;
            Text { text: "User"; color: white; font-size: 16px; }
            ComboBox {
                width: 160px;
                model: root.users;
                current-value: root.selected-user;
                selected(val) => { root.selected-user = val; }
            }
        }
    }
}