import { Button, VerticalBox, HorizontalBox, LineEdit, ComboBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    width: 1920px;
    height: 1080px;
    title: "heyOS Greeter";
    no-frame: true;
    background: transparent;
    default-font-family: "JetBrains Mono";

    callback login(string, string, string);

    // heyOS Pink Theme
    property <color> accent: #ff66b2;
    property <color> bg-dark: #050507;
    property <color> card-bg: #0f0f14f2;
    property <color> input-bg: #1a1a24;
    
    in property <[string]> users: ["hey"];
    in property <[string]> sessions: ["heydm"];
    in property <string> error-message: "";
    
    // Properties for clock (updated from Rust side or simple internal timer)
    property <string> current-time: "12:00";
    property <string> current-date: "Monday, March 1";

    out property <string> selected-user: users[0];
    out property <string> selected-session: sessions[0];
    
    // Global Background
    Rectangle {
        width: 100%;
        height: 100%;
        background: bg-dark;
        
        // Background Glows
        Rectangle {
            x: parent.width * 0.15; y: parent.height * 0.1; width: 800px; height: 800px;
            background: @radial-gradient(circle, accent.with-alpha(0.06) 0%, transparent 70%);
        }
        Rectangle {
            x: parent.width * 0.65; y: parent.height * 0.5; width: 700px; height: 700px;
            background: @radial-gradient(circle, #4bb3d3.with-alpha(0.04) 0%, transparent 70%);
        }
    }

    // Top Clock Section
    VerticalBox {
        y: 120px;
        width: 100%;
        spacing: 0px;
        Text {
            text: root.current-time;
            font-size: 120px;
            font-weight: 900;
            color: white;
            horizontal-alignment: center;
            letter-spacing: -2px;
        }
        Text {
            text: root.current-date;
            font-size: 24px;
            font-weight: 500;
            color: accent;
            horizontal-alignment: center;
            letter-spacing: 2px;
        }
    }

    // Main Login Card
    Rectangle {
        width: 360px;
        height: 480px;
        x: (parent.width - self.width) / 2;
        y: (parent.height - self.height) / 2 + 100px;
        background: card-bg;
        border-radius: 32px;
        border-width: 1px;
        border-color: white.with-alpha(0.08);
        drop-shadow-blur: 60px;
        drop-shadow-color: #000000a0;

        VerticalBox {
            padding: 45px;
            spacing: 25px;
            alignment: center;

            // User Avatar (Animated Pulse)
            Rectangle {
                width: 100px;
                height: 100px;
                background: input-bg;
                border-radius: 50px;
                border-width: 3px;
                border-color: accent;
                
                Text {
                    text: ""; // User icon
                    font-size: 48px;
                    font-family: "Font Awesome 6 Free";
                    color: white.with-alpha(0.4);
                    vertical-alignment: center;
                    horizontal-alignment: center;
                }
            }

            // Username display
            Text {
                text: root.selected-user;
                font-size: 28px;
                font-weight: 700;
                color: white;
                horizontal-alignment: center;
            }

            // Password Field
            pwd := LineEdit {
                placeholder-text: "Password";
                input-type: password;
                height: 54px;
                font-size: 16px;
                horizontal-alignment: center;
                accepted => { root.login(root.selected-user, self.text, root.selected-session); }
            }

            if (root.error-message != "") : Text {
                text: root.error-message;
                color: #ff4d4d;
                font-size: 13px;
                horizontal-alignment: center;
                wrap: word-wrap;
            }

            // Login Button
            login_btn := Rectangle {
                height: 54px;
                background: touch.pressed ? accent.darker(0.2) : (touch.has-hover ? accent.brighter(0.1) : accent);
                border-radius: 16px;
                animate background { duration: 150ms; }
                
                Text {
                    text: "SIGN IN";
                    color: white;
                    font-size: 14px;
                    font-weight: 900;
                    letter-spacing: 2px;
                }

                touch := TouchArea {
                    clicked => { root.login(root.selected-user, pwd.text, root.selected-session); }
                }
            }
        }
    }

    // Bottom Bar (User & Session Changers)
    Rectangle {
        y: parent.height - 80px;
        width: 100%;
        height: 80px;
        
        HorizontalBox {
            alignment: center;
            spacing: 40px;
            padding: 20px;

            // User Changer
            HorizontalBox {
                spacing: 10px;
                Text { text: ""; vertical-alignment: center; color: accent; font-size: 18px; }
                ComboBox {
                    width: 150px;
                    model: root.users;
                    current-value: root.selected-user;
                    selected(val) => { root.selected-user = val; }
                }
            }

            // Session Changer
            HorizontalBox {
                spacing: 10px;
                Text { text: ""; vertical-alignment: center; color: accent; font-size: 18px; }
                ComboBox {
                    width: 150px;
                    model: root.sessions;
                    current-value: root.selected-session;
                    selected(val) => { root.selected-session = val; }
                }
            }
            
            // Power Options
            HorizontalBox {
                spacing: 20px;
                padding-left: 20px;
                Text { 
                    text: ""; color: white.with-alpha(0.5); font-size: 20px;
                    TouchArea { clicked => { /* Root would handle this */ } }
                }
            }
        }
    }
}
